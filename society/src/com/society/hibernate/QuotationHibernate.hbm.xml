        column="gst_amount"
    />
            <property
        name="afterGstTotal"
        type="java.lang.Double"
        column="after_gst_total"
    />
    
    
               <property
        name="discount"
        type="java.lang.Double"
        column="discount"
    />
    
               <property
        name="discountAmount"
        type="java.lang.Double"
        column="discount_amount"
    />
    
               <property
        name="grossTotal1"
        type="java.lang.Double"
        column="gross_total"
    />
    
    
          <property
        name="quotationNo"
        type="java.lang.String"
        column="quotation_no"
    />
    
    
    </class>
</hibernate-mapping>
    