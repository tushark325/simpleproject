		</id>


    <property
        name="fkVendorId"
        type="java.lang.Long"
        column="fk_vendor_id"
    />

	<property
        name="vendorName"
        type="java.lang.String"
        column="vendor_name"
    />
    
    	<property
        name="type"
        type="java.lang.String"
        column="type"
    />
    
    <property
        name="quotDate"
        type="java.sql.Date"
        column="date_of_quotation"
    />
    

    
    <property
        name="taskPic"
        column="file"
    />
    
    
     <property
        name="companyName"
        type="java.lang.String"
        column="company_name"
    />
    
        <property
        name="companyAddress"
        type="java.lang.String"
        column="company_address"
    />
    
        <property
        name="address"
        type="java.lang.String"
        column="address"
    />
    
        <property
        name="state"
        type="java.lang.String"
        column="state"
    />
    
  
    <property
        name="zip"
        type="java.lang.String"
        column="zip"
    />
     
      <property
        name="phoneno"
        type="java.lang.String"
        column="phone_no"
    />
    
        <property
        name="description"
        type="java.lang.String"
        column="description"
    />
    
        <property
        name="unit"
        type="java.lang.String"
        column="unit"
    />
    
        <property
        name="unitPrice"
        type="java.lang.Double"
        column="unit_price"
    />
    
        <property
        name="quantity"
        type="java.lang.Long"
        column="quantity"
    />
    
     <property
        name="total"
        type="java.lang.Double"
        column="total"
    />
            <property
        name="subTotal"
        type="java.lang.Double"
        column="sub_total"
    />
            <property
        name="gst"
        type="java.lang.Double"
        column="gst"
    />
            <property
        name="gstAmount"
