<hibernate-mapping>
    
    <class name="com.society.hibernate.OfferLetterHibernate" 
    table="offer_letter_details" schema="society"
    >
    
    	<id name="pkOfferLetterId" type="java.lang.Long" column="pk_offer_letter_id">
			<generator class="increment" />
		</id>
		
		<!-- <property
        name="fk_employee_id"
        type="java.lang.Long"
        column="fk_employee_id"
        />	 -->
        
        <property
